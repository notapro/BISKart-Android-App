<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
     >

    <Button
        android:id="@+id/modifycart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Modify Cart" />
    
    <TextView 
        android:id="@+id/totaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="22sp"
        android:textStyle="bold"/>
    
    <ListView
        android:id="@+id/summarylistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/modifycart"
        android:layout_below="@id/totaltext"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:fadeScrollbars="false"
        android:paddingRight="20dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/trackxml"
        android:scrollbarTrackVertical="@drawable/scrollbarxml"
        android:scrollbars="vertical" >
    </ListView>


</RelativeLayout>
