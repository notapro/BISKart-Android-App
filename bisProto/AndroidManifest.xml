<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bis.kart.biskart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="bis.kart.biskart.Cart"
            android:label="@string/title_activity_cart"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.CART" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.DeliveryDetails"
            android:label="@string/title_activity_delivery_details" >
            <intent-filter>
                <action android:name="android.intent.action.DELIVERYDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.EndApp"
            android:label="@string/title_activity_end_app" >
            <intent-filter>
                <action android:name="android.intent.action.ENDAPP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.DeliveryDetailsMain"
            android:label="@string/app_name"
            android:theme="@style/BarruTheme" >
            <intent-filter>
                <action android:name="android.intent.action.DELIVERYDETAILSMAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.ActivityFragments"
            android:label="@string/app_name"
            android:theme="@style/BarruTheme" >
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITYFRAGMENTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.CashOnDelivery"
            android:label="@string/app_name" 
            android:theme="@style/BarruTheme">
            <intent-filter>
                <action android:name="android.intent.action.CASHONDELIVERY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="bis.kart.biskart.CardDetails"
            android:label="@string/app_name" 
            android:theme="@style/BarruTheme">
        </activity>
        <activity
            android:name="bis.kart.biskart.Netbanking"
            android:label="@string/app_name" 
            android:theme="@style/BarruTheme">
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AmoghTheme" >

        </activity>
        <activity
            android:name=".ProductListing"
            android:label="@string/title_activity_product_page" 
            android:theme="@style/AmoghTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpPage"
            android:label="@string/title_activity_sign_up_page"
            android:theme="@style/AmoghTheme" >
        </activity>
        <activity
            android:name=".ProductPage"
            android:label="@string/app_name"
            android:theme="@style/AmoghTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
    <!-- To access Google+ APIs: -->

</manifest>