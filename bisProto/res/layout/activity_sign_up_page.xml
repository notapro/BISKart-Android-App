<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dhruv894.biskartlogin.SignUpPage">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/signUpName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter your name"
        android:ems="10"
        android:id="@+id/signUpNameValue"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/signUpEmail"
        android:layout_below="@+id/signUpName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />
    -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signUpEmailValue"
        android:layout_alignTop="@+id/signUpEmail"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter your Email-ID"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/signUpPassword"
        android:layout_below="@+id/signUpEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />
      -->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordValue"
        android:layout_alignTop="@+id/signUpPassword"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter your Password"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/signUpAddress"
        android:layout_below="@+id/signUpPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"/>
       -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/signUpAddressValue"
        android:layout_alignTop="@+id/signUpAddress"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter your Address"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:id="@+id/signUpContact"
        android:layout_below="@+id/signUpAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />
     -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/signUpContactValue"
        android:layout_alignTop="@+id/signUpContact"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter your Contact No."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpSubmit"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/signUpContactValue"
        android:layout_gravity="center"
        android:background="@drawable/button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/signUpError"
        android:layout_gravity="center"
        android:layout_below="@+id/signUpSubmit"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to login"
        android:id="@+id/signUpProceedToLogin"
        android:layout_alignTop="@+id/signUpError"
        android:layout_alignLeft="@+id/signUpSubmit"
        android:layout_alignStart="@+id/signUpSubmit"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
